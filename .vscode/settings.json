{
    // Use the IntelliSense engine that works best with PlatformIO
  "C_Cpp.intelliSenseEngine": "default",

  // Better understanding of headers included by PlatformIO
  "C_Cpp.default.configurationProvider": "platformio",

  // Treat warnings as errors (stronger checking in IntelliSense)
  "C_Cpp.errorSquiggles": "enabled",

  // Optional: Enable additional compiler warnings in IntelliSense
  "C_Cpp.default.compilerArgs": [
    "-Wall",
    "-Wextra",
    "-Wpedantic"
  ],

  // Optional: Show all header files in the file explorer
  "files.associations": {
    "*.tcc": "cpp",
    "cctype": "cpp",
    "cmath": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "new": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "clocale": "cpp",
    "cstdarg": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "algorithm": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "map": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "fstream": "cpp",
    "initializer_list": "cpp",
    "iomanip": "cpp",
    "iosfwd": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "ostream": "cpp",
    "sstream": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "cinttypes": "cpp",
    "typeinfo": "cpp"
  },

  // Optional: format on save
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "ms-vscode.cpptools",

  // Optional: show inlay hints for parameters
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "C_Cpp.inlayHints.referenceOperator.enabled": true,

  // Optional: show squiggles for unused variables/functions
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
}